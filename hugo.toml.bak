# ==============================================
# 1. 基础核心配置（Hugo 启动必备，适配新版本）
# ==============================================
# 本地测试用URL（部署时替换为你的域名，如 https://yourblog.com/）
baseURL = "http://localhost:1313/"
# 博客标题（页面顶部、浏览器标签显示）
title = "我的博客"
# 使用的主题（必须与 themes 目录下的文件夹名完全一致，此处为 PaperMod）
theme = "PaperMod"
# 网站语言（中文，影响日期、时间等本地化显示）
languageCode = "zh-CN"
# 启用 robots.txt（搜索引擎抓取规则文件，默认生成基础规则）
enableRobotsTXT = true

# ==============================================
# 2. 分页配置（替代旧版 paginate，Hugo v0.128.0+ 必用）
# ==============================================
[pagination]
# 列表页（如文章列表、分类页）每页显示的文章数量
pagerSize = 5

# ==============================================
# 3. 构建配置（本地测试适配，避免草稿/未来文章不显示）
# ==============================================
# 允许构建草稿文章（配合 hugo server -D 命令，本地预览必备）
buildDrafts = true
# 不构建“发布日期在未来”的文章（避免本地显示未到时间的内容）
buildFuture = false
# 不构建“已过期”的文章（如设置了 expireDate 的旧内容）
buildExpired = false

# ==============================================
# 4. PaperMod 主题参数（基础功能配置，避免页面空白）
# ==============================================
[params]
# 环境模式（development=本地测试，不加载统计/广告；production=部署用）
env = "development"
# 主题内显示的标题（优先级高于全局 title，可自定义）
title = "我的博客"
# 博客描述（用于搜索引擎结果、社交分享卡片）
description = "用 Hugo + PaperMod 搭建的个人博客，记录生活与思考"
# 作者名称（显示在文章底部、关于页等位置）
author = "我"
# 日期显示格式（示例：2024年5月20日）
DateFormat = "2006年1月2日"
# 主题模式（auto=跟随系统深色/浅色；dark=强制深色；light=强制浅色）
defaultTheme = "auto"
# 是否禁用主题切换按钮（false=允许用户手动切换深色/浅色）
disableThemeToggle = false

# 文章元信息显示（按需开启/关闭）
ShowReadingTime = true  # 显示文章阅读时间（如“5分钟阅读”）
ShowWordCount = true    # 显示文章字数统计（如“1200字”）
ShowShareButtons = true # 显示文章分享按钮（微信、微博等）
ShowPostNavLinks = true # 显示文章前后导航（上一篇/下一篇）
ShowBreadCrumbs = true  # 显示面包屑导航（如“首页 > 分类 > 技术”）
UseHugoToc = true       # 使用 Hugo 自带的文章目录（单页文章内显示）

# 首页基础配置（避免空白）
homeInfoParams = {
  Title = "你好呀 👋",  # 首页大标题（支持 Emoji）
  Content = "欢迎来到我的博客，这里记录我的学习笔记与生活感悟～" # 首页欢迎语
}

# ==============================================
# 5. 主导航菜单（页面顶部导航栏，支持外部/内部链接）
# ==============================================
# 导航项1：分类页（链接到 /categories/ 目录）
[[menu.main]]
identifier = "categories" # 唯一标识（不可重复，英文/中文均可）
name = "分类"             # 导航栏显示的文字
url = "/categories/"      # 链接路径（内部目录需以 / 开头和结尾）
weight = 10               # 排序权重（值越小越靠前）

# 导航项2：标签页（链接到 /tags/ 目录）
[[menu.main]]
identifier = "tags"
name = "标签"
url = "/tags/"
weight = 20

# 导航项3：关于页（如需添加，先在 content 目录新建 about.md）
[[menu.main]]
identifier = "about"
name = "关于我"
url = "/about/"
weight = 30

# 导航项4：外部链接（示例：链接到 GitHub）
[[menu.main]]
identifier = "github"
name = "GitHub"
url = "https://github.com/" # 外部链接需写完整 URL
weight = 40

# ==============================================
# 6. 代码高亮配置（PaperMod 推荐，适配 Hugo 自带 Chroma）
# ==============================================
# 启用自定义 CSS 类（避免 inline 样式，加载更快）
pygmentsUseClasses = true
[markup.highlight]
noClasses = false          # 必须设为 false，配合 pygmentsUseClasses 使用
# lineNos = true           # 如需显示代码行号，取消注释此句
# style = "github-dark"    # 如需自定义高亮主题，取消注释并替换（如 monokai、dracula）
